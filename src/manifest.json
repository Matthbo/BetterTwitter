{
    "name": "BetterTwitter",
    "description": "A crossbrowser extension for customising Twitter Web",
    "version": "0.1",
    "author": "Matthbo",
    "manifest_version": 2,
    "icons": {},
    "permissions": ["storage"],
    "background": {
        "scripts": ["./background.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.twitter.com/*"
            ],
            "css": [
                "./content/main.css"
            ],
            "js": [
                "./content/app.js"
            ]
        }
    ]
}